;; shadow-cljs configuration
{:source-paths ["src"]
 :dev-http
 {4041 {:root "resources/public"
        :proxy-url "http://localhost:4040"}}

 :builds
 {;; npx shadow-cljs watch admin
  :admin
  {:target :browser
   :output-dir "resources/public/admin"
   :asset-path "/js"
   :devtools {:watch-dir "resources/public/admin"
              :watch-path "/admin"}
   :modules {:admin ; becomes public/admin/js/admin.js
             {:init-fn rtc.admin/init}}}}}
